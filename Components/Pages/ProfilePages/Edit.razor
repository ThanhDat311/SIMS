@page "/profile/edit"
@using SIMS.Data
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Authorization

@attribute [Authorize]

@inject UserManager<ApplicationUser> UserManager
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject NavigationManager NavigationManager

<PageTitle>Edit Profile</PageTitle>

<div class="container py-5 fade-in">
    <div class="row justify-content-center">
        <div class="col-lg-8">

            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2 class="fw-bold text-primary mb-0">
                        <i class="bi bi-person-gear me-2"></i>Edit Profile
                    </h2>
                    <p class="text-muted mb-0">Update your personal information.</p>
                </div>
                <a href="/profile" class="btn btn-outline-secondary rounded-pill px-3">
                    <i class="bi bi-arrow-left me-1"></i> Back
                </a>
            </div>

            @if (isLoading)
            {
                <div class="d-flex flex-column align-items-center justify-content-center py-5">
                    <div class="spinner-border text-primary mb-3" role="status" style="width: 3rem; height: 3rem;">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <span class="text-muted">Loading profile data...</span>
                </div>
            }
            else if (currentUser != null)
            {
                <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                    <div class="card-body p-4 p-md-5">

                        <div class="d-flex justify-content-center mb-4">
                            <div class="position-relative">
                                <div class="bg-gradient-secondary text-white rounded-circle d-flex align-items-center justify-content-center shadow-sm border border-4 border-white"
                                     style="width: 100px; height: 100px; font-size: 2.5rem;">
                                    @(string.IsNullOrEmpty(currentUser.Name) ? "?" : currentUser.Name.Substring(0, 1).ToUpper())
                                </div>
                                <div class="position-absolute bottom-0 end-0 bg-white rounded-circle p-1 shadow-sm border">
                                    <i class="bi bi-pencil-fill text-primary small p-1"></i>
                                </div>
                            </div>
                        </div>

                        @if (!string.IsNullOrEmpty(errorMessage))
                        {
                            <div class="alert alert-danger alert-dismissible fade show border-0 bg-soft-danger text-danger d-flex align-items-center" role="alert">
                                <i class="bi bi-exclamation-circle-fill me-2"></i>
                                <div>@errorMessage</div>
                                <button type="button" class="btn-close" @onclick="() => errorMessage = string.Empty"></button>
                            </div>
                        }

                        @if (!string.IsNullOrEmpty(successMessage))
                        {
                            <div class="alert alert-success alert-dismissible fade show border-0 bg-soft-success text-success d-flex align-items-center" role="alert">
                                <i class="bi bi-check-circle-fill me-2"></i>
                                <div>@successMessage</div>
                                <button type="button" class="btn-close" @onclick="() => successMessage = string.Empty"></button>
                            </div>
                        }

                        <form @onsubmit="HandleSubmit">
                            <div class="row g-3">

                                <div class="col-12">
                                    <h6 class="text-muted text-uppercase fw-bold small mb-3 mt-2">Account Identity</h6>
                                </div>

                                <div class="col-md-6">
                                    <label for="username" class="form-label fw-bold text-secondary small">Username</label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light border-end-0 text-muted"><i class="bi bi-shield-lock"></i></span>
                                        <input type="text" class="form-control form-control-lg bg-light border-start-0 text-muted" id="username" @bind="currentUser.UserName" disabled />
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <label for="studentId" class="form-label fw-bold text-secondary small">Student ID</label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light border-end-0 text-muted"><i class="bi bi-card-heading"></i></span>
                                        <input type="text" class="form-control form-control-lg bg-light border-start-0 text-muted" id="studentId" @bind="currentUser.StudentId" disabled />
                                    </div>
                                </div>

                                <div class="col-12">
                                    <h6 class="text-muted text-uppercase fw-bold small mb-3 mt-4">Personal Information</h6>
                                </div>

                                <div class="col-12">
                                    <label for="name" class="form-label fw-bold text-secondary">Full Name <span class="text-danger">*</span></label>
                                    <input type="text" class="form-control form-control-lg" id="name" @bind="currentUser.Name" required placeholder="Enter your full name" />
                                </div>

                                <div class="col-md-6">
                                    <label for="email" class="form-label fw-bold text-secondary">Email <span class="text-danger">*</span></label>
                                    <input type="email" class="form-control form-control-lg" id="email" @bind="currentUser.Email" required placeholder="name@example.com" />
                                </div>

                                <div class="col-md-6">
                                    <label for="phone" class="form-label fw-bold text-secondary">Phone Number</label>
                                    <input type="tel" class="form-control form-control-lg" id="phone" @bind="currentUser.PhoneNumber" placeholder="09xx..." />
                                </div>

                                <div class="col-md-6">
                                    <label for="dob" class="form-label fw-bold text-secondary">Date of Birth</label>
                                    <input type="date" class="form-control form-control-lg" id="dob" @bind="dobValue" />
                                </div>

                                <div class="col-md-6">
                                    <label for="address" class="form-label fw-bold text-secondary">Address</label>
                                    <input type="text" class="form-control form-control-lg" id="address" @bind="currentUser.Address" placeholder="City, Country" />
                                </div>
                            </div>

                            <div class="d-flex justify-content-end gap-2 mt-5">
                                <a href="/profile" class="btn btn-light btn-lg px-4 rounded-pill">Cancel</a>

                                <button type="submit" class="btn btn-gradient-primary btn-lg px-4 rounded-pill shadow-sm" disabled="@isSubmitting">
                                    @if (isSubmitting)
                                    {
                                        <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                                        <span>Saving...</span>
                                    }
                                    else
                                    {
                                        <i class="bi bi-check-lg me-2"></i>
                                
                                        <span>Save Changes</span>
                                    }
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-danger d-flex align-items-center rounded-4 shadow-sm" role="alert">
                    <i class="bi bi-exclamation-triangle-fill fs-4 me-3"></i>
                    <div>
                        <strong>Unable to load profile.</strong> Please try logging in again.
                    </div>
                </div>
                <div class="text-center mt-3">
                    <a href="/profile" class="btn btn-secondary rounded-pill">Go Back</a>
                </div>
            }

        </div>
    </div>
</div>

<style>
    
    .form-control:disabled, .form-control[readonly] {
        background-color: #f8f9fa;
        opacity: 1;
    }

    .bg-soft-danger {
        background-color: rgba(220, 53, 69, 0.1);
    }

    .bg-soft-success {
        background-color: rgba(25, 135, 84, 0.1);
    }

    .bg-gradient-secondary {
        background: linear-gradient(45deg, #a8b8d8, #6c757d);
    }

    .form-control-lg {
        font-size: 1rem;
        padding: 0.75rem 1rem;
    }
</style>

@code {
    private ApplicationUser? currentUser;
    private DateTime? dobValue;
    private string errorMessage = string.Empty;
    private string successMessage = string.Empty;
    private bool isLoading = true;
    private bool isSubmitting = false;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
            var user = authState.User;

            if (user?.Identity?.IsAuthenticated == true)
            {
                var userEmail = user.FindFirst(System.Security.Claims.ClaimTypes.Email)?.Value ?? 
                               user.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
                
                if (!string.IsNullOrEmpty(userEmail))
                {
                    currentUser = await UserManager.FindByEmailAsync(userEmail);
                    if (currentUser == null)
                    {
                        currentUser = await UserManager.FindByIdAsync(userEmail);
                    }

                    if (currentUser != null)
                    {
                        dobValue = currentUser.DOB;
                    }
                }
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading profile: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task HandleSubmit()
    {
        errorMessage = string.Empty;
        successMessage = string.Empty;

        if (currentUser == null)
        {
            errorMessage = "User data is invalid.";
            return;
        }

        if (string.IsNullOrWhiteSpace(currentUser.Name))
        {
            errorMessage = "Please enter your full name.";
            return;
        }

        if (string.IsNullOrWhiteSpace(currentUser.Email))
        {
            errorMessage = "Please enter your email address.";
            return;
        }

        var updateErrorMessage = string.Empty;
        var updateSuccessMessage = string.Empty;

        try
        {
            isSubmitting = true;

            // Set DOB
            currentUser.DOB = dobValue;

            // Update user information
            var result = await UserManager.UpdateAsync(currentUser);

            if (result.Succeeded)
            {
                updateSuccessMessage = "Profile updated successfully!";
                successMessage = updateSuccessMessage;
                await Task.Delay(1500);
                NavigationManager.NavigateTo("/profile");
            }
            else
            {
                updateErrorMessage = string.Join(", ", result.Errors.Select(e => e.Description));
                errorMessage = updateErrorMessage;
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"An error occurred: {ex.Message}";
        }
        finally
        {
            isSubmitting = false;
        }
    }
}
